html, body {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  font: 16px Helvetica;
}

h1 {
  margin: 0 24px 0 0;
}

a {
  color: inherit;
  text-decoration: none;
}

header {
  height: 40px;
  line-height: 40px;
  padding: 0 8px;
  background-color: #666;
  color: #fff;

  * {
    display: inline-block;
    vertical-align: top;
  }

  footer {
    float: right;

    #fps {
      font-size: 12px;
      font-style: italic;
    }
    #copy {
      margin-left: 8px
      font-size: 10px;
    }
  }
}

main {
  position: absolute;
  top: 40px;
  bottom: 0;
  width: 100%;
}
